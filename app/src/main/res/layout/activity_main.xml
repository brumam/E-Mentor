<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFF3FB">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Your previous code for the main screen layout -->
            <!-- Title E-Learning Platform -->

            <!-- Add other UI elements provided in your description -->

            <!-- Bottom nav-bar -->


            <ImageView
                android:id="@+id/imageView16"
                android:layout_width="33dp"
                android:layout_height="25dp"
                android:elevation="1dp"
                android:src="@drawable/edit_pen"
                tools:layout_editor_absoluteX="359dp"
                tools:layout_editor_absoluteY="102dp"
                tools:ignore="MissingConstraints" />

            <ImageView
                android:id="@+id/imageView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:src="@drawable/notification_btn"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/title_e_lea" />

            <TextView
                android:id="@+id/title_e_lea"
                android:layout_width="108dp"
                android:layout_height="35dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="60dp"
                android:gravity="center_vertical"
                android:lineSpacingExtra="1sp"
                android:text="E-Mentor"
                android:textAppearance="@style/headsize"
                app:layout_constraintEnd_toStartOf="@+id/imageView13"
                app:layout_constraintHorizontal_bias="0.063"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.bottomnavigation.BottomNavigationView
                android:id="@+id/bottom_nav_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="#FFFFFF"
                app:itemIconTint="@drawable/bottom_nav_icon_color_selector"
                app:itemTextColor="@drawable/bottom_nav_text_color_selector"
                app:labelVisibilityMode="labeled"
                app:layout_constraintBottom_toBottomOf="parent"
                app:menu="@menu/bottom_nav_menu"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="0dp" />

            <ImageView
                android:id="@+id/centerImage"
                android:layout_width="80dp"
                android:layout_height="64dp"
                android:layout_marginBottom="40dp"
                android:elevation="8dp"
                android:src="@drawable/ic_e_mentor"
                app:layout_constraintBottom_toBottomOf="@+id/bottom_nav_bar"
                app:layout_constraintBottom_toTopOf="@+id/bottom_nav_bar"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/bottom_nav_bar" />

            <ImageView
                android:id="@+id/imageView14"
                android:layout_width="388dp"
                android:layout_height="95dp"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/title_e_lea"
                app:srcCompat="@drawable/profileshape" />

            <ImageView
                android:id="@+id/imageView15"
                android:layout_width="53dp"
                android:layout_height="51dp"
                android:layout_marginEnd="20dp"

                android:background="@drawable/ellipse_image_view_bg"
                app:layout_constraintBottom_toBottomOf="@+id/profile_name"
                app:layout_constraintEnd_toStartOf="@+id/profile_name"
                app:layout_constraintHorizontal_bias="0.979"
                app:layout_constraintStart_toStartOf="@+id/imageView14"
                app:layout_constraintTop_toTopOf="@+id/profile_name"
                app:srcCompat="@drawable/prof_img" />

            <TextView
                android:id="@+id/profile_name"
                style="@style/headsize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="128dp"
                android:text="Jessie Jey"
                android:textColor="@color/white"
                app:layout_constraintEnd_toStartOf="@+id/imageView16"
                tools:layout_editor_absoluteY="126dp"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/textView15"
                style="@style/headsize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Your Sessions"
                android:textColor="@color/maincolor"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.027"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView14" />

            <TextView
                android:id="@+id/textView16"
                style="@style/subsize"
                android:layout_width="190dp"
                android:layout_height="29dp"
                android:layout_marginTop="8dp"
                android:text="Manage and track your upcoming and completed tutoring sessions."
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.208"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView15" />

            <ImageView
                android:id="@+id/imageView17"
                android:layout_width="291dp"
                android:layout_height="250dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/home_image"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView16" />

            <Button
                android:id="@+id/start_learnbtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/gradient_background"
                android:gravity="left|center_vertical"
                android:drawableEnd="@drawable/arrowimg"
                android:paddingLeft="16dp"
                android:drawablePadding="8dp"
                android:text="Start Learning"
                android:textColor="@color/white"
                android:textSize="16sp"
                app:layout_constraintBottom_toTopOf="@+id/centerImage"
                app:layout_constraintEnd_toEndOf="@+id/imageView17"
                app:layout_constraintStart_toStartOf="@+id/imageView17"
                app:layout_constraintTop_toBottomOf="@+id/imageView17" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <!-- Add your bottom navigation bar here -->

</androidx.constraintlayout.widget.ConstraintLayout>